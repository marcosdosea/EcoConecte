@model EcoConecteWeb.Models.VendaViewModel

@{
    ViewData["Title"] = "EcoConecte - Editar Venda";
    var idCoop = ViewData["idCoop"];
}

<h1 class="title">
    <i class="fas fa-edit"></i> Editar Venda
</h1>

<div class="form-container text-left">
    <form asp-action="VendaEdit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" name="idCoop" value="@ViewData["idCoop"]" />

        <div class="form-group">
            <label asp-for="Tipo" class="control-label">Tipo do Material</label>
            <select asp-for="Tipo" class="form-control" title="Clique para selecionar o tipo do material">
                <option value="" disabled selected hidden>🔽 Selecione...</option>
                <option value="M">M</option>
                <option value="P">P</option>
            </select>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>
        <div class="form-group text-left">
            <label asp-for="Valor" class="control-label"></label>
            <input asp-for="Valor" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Quantidade" class="control-label"></label>
            <input asp-for="Quantidade" class="form-control" />
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Data" class="control-label"></label>
            <input asp-for="Data" class="form-control" />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IdPessoa" class="control-label"></label>
            <input asp-for="IdPessoa" class="form-control" />
            <span asp-validation-for="IdPessoa" class="text-danger"></span>
        </div>
        <div class="button-group">
            <input type="submit" value="Salvar" class="icon-button" />
            <a asp-controller="AdmCooperativa" asp-action="VendasList" asp-route-id="@idCoop" class="icon-button">
                <i class="fa fa-arrow-left"></i> Voltar
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}