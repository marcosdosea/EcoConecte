@model EcoConecteWeb.Models.NoticiaViewModel

@{
    ViewData["Title"] = "EcoConecte - Apagar Notícia";
    var IdCoop = ViewData["idCoop"];
}

<h1 class="title">
    <i class="fas fa-trash-alt"></i> Apagar Notícia
</h1>

<h3>Tem certeza de que deseja apagar esta notícia?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Conteudo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Conteudo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
    </dl>

    <form asp-action="NoticiaDeleteConfirmed" method="post">
        <input type="hidden" name="Id" value="@Model.Id" /> <!-- Passando o Id -->
        <input type="hidden" name="IdCoop" value="@IdCoop" /> <!-- Passando o IdCoop -->
        <div class="button-group">
            <button type="submit" class="icon-button">
                <i class="fas fa-trash-alt"></i> Apagar
            </button>
            <button type="button" class="icon-button" onclick="window.location.href='@Url.Action("NoticiasList", "AdmCooperativa", new { id = IdCoop })'">
                <i class="fas fa-undo"></i> Voltar
            </button>
        </div>
    </form>
</div>
