@model EcoConecteWeb.Models.OrientacoesViewModel

@{
    ViewData["Title"] = "EcoConecte - Apagar Orientação";
    var idCoop = ViewData["idCoop"];
}

<div class="container">
    <h1 class="title">
        <i class="fas fa-trash-alt"></i> Apagar Orientação
    </h1>

    <h3>Tem certeza?</h3>

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Titulo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
        </dl>
    </div>

    <form asp-action="OrientacaoDeleteConfirmed" method="post">
        <input type="hidden" name="Id" value="@Model.Id" /> <!-- Passando o Id -->
        <input type="hidden" name="IdCoop" value="@Model.IdCooperativa" /> <!-- Passando o IdCoop -->
        <div class="button-group">
            <button type="submit" class="icon-button">
                <i class="fas fa-trash-alt"></i> Apagar
            </button>
            <button type="button" class="icon-button" onclick="window.location.href='@Url.Action("ListaOrientacoes", "AdmCooperativa", new { id = Model.IdCooperativa })'">
                <i class="fas fa-undo"></i> Voltar
            </button>
        </div>
    </form>
</div>
