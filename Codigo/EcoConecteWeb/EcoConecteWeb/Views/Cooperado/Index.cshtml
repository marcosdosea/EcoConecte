@model EcoConecteWeb.Models.PessoaViewModel

@{
    ViewData["Title"] = "EcoConecte - Perfil Cooperado";
    var pessoaId = ViewData["PessoaId"];
}

<h1 class="title">
    <i class="fas fa-info-circle"></i> Perfil do Cooperado
</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
