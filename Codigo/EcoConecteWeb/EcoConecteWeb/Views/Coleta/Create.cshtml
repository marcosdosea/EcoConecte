@model EcoConecteWeb.Models.ColetaViewModel

@{
    ViewData["Title"] = "EcoConecte - Cadastrar Coleta";
}

<div class="container">
    <h1 class="title">
        <i class="fas fa-plus-circle"></i> Cadastrar Coleta
    </h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Cep" class="control-label"></label>
                    <input asp-for="Cep" class="form-control" />
                    <span asp-validation-for="Cep" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Logradouro" class="control-label"></label>
                    <input asp-for="Logradouro" class="form-control" />
                    <span asp-validation-for="Logradouro" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Numero" class="control-label"></label>
                    <input asp-for="Numero" class="form-control" />
                    <span asp-validation-for="Numero" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DiaColeta" class="control-label"></label>
                    <input asp-for="DiaColeta" class="form-control" />
                    <span asp-validation-for="DiaColeta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HorarioInicio" class="control-label"></label>
                    <input asp-for="HorarioInicio" class="form-control" />
                    <span asp-validation-for="HorarioInicio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="HorarioTermino" class="control-label"></label>
                    <input asp-for="HorarioTermino" class="form-control" />
                    <span asp-validation-for="HorarioTermino" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdCooperativa" class="control-label"></label>
                    <input asp-for="IdCooperativa" class="form-control" />
                    <span asp-validation-for="IdCooperativa" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="button-group">
                        <input type="submit" value="Inserir" class="icon-button" />
                        <input type="button" value="Voltar" class="icon-button" onclick="window.history.back();" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


