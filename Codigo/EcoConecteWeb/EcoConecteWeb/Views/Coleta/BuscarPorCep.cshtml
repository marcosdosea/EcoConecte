@model IEnumerable<EcoConecteWeb.Models.ColetaViewModel>

@{
    ViewData["Title"] = "Buscar por CEP";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - EcoConecte</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0;
        }

        h1 {
            font-size: 24px;
            color: #333;
        }

        .routine-container {
            border: 1px solid #008000;
            padding: 20px;
            border-radius: 10px;
        }

        .routine-item {
            background-color: #008000;
            color: #fff;
            font-size: 18px;
            padding: 10px;
            margin: 10px 0;
            border-radius: 5px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .buttons-container {
            margin-top: 20px;
            display: flex;
            justify-content: space-around;
        }

        .button {
            background-color: #008000;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .button:hover {
                background-color: #006400;
            }

     
    </style>
</head>
<body>


    <div class="container">
        <h1>Sua rotina de coleta</h1>
        <div class="routine-container">
            @foreach (var coleta in Model)
            {
                <div class="routine-item">
                    <span>@coleta.DiaColeta.ToString("dddd, dd/MM")</span>
                    <span>@coleta.HorarioInicio.ToString("HH:mm") - @coleta.HorarioTermino.ToString("HH:mm")</span>
                </div>
            }
        </div>
        <div class="buttons-container">
            <button class="button">Agendar coleta</button>
            <button class="button">Dicas</button>
            <button class="button">Voltar</button>
        </div>
    </div>

</body>
</html>
