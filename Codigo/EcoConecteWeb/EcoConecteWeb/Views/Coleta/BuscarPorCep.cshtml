@model IEnumerable<EcoConecteWeb.Models.ColetaViewModel>

@{
    ViewData["Title"] = "Buscar por CEP";
    var coletas = Model ?? Enumerable.Empty<EcoConecteWeb.Models.ColetaViewModel>();
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-eco text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-calendar-check me-2"></i>Rotina de Coleta para o CEP
                    </h4>
                </div>
                <div class="card-body p-4">
                    @if (!coletas.Any())
                    {
                        <div class="alert alert-info" role="alert">
                            <i class="bi bi-info-circle-fill me-2"></i>
                            Ainda não existem coletas programadas para a região buscada.
                        </div>
                        <p class="mt-3">Cadastre-se para agendar uma coleta no seu endereço ou verifique as orientações de reciclagem.</p>
                    }
                    else
                    {
                        <h5 class="section-title text-eco-dark mb-3">
                            <i class="bi bi-calendar-week me-2"></i>Dias e Horários de Coleta
                        </h5>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th class="px-4">Dia da Coleta</th>
                                        <th class="px-4">Horário de Início</th>
                                        <th class="px-4">Horário de Término</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var coleta in coletas) {
                                        <tr>
                                            <td class="px-4">@coleta.DiaColeta.ToString("dddd, dd/MM")</td>
                                            <td class="px-4">@coleta.HorarioInicio.ToString("HH:mm")</td>
                                            <td class="px-4">@coleta.HorarioTermino.ToString("HH:mm")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
                <div class="card-footer form-actions p-4 d-flex justify-content-between align-items-center flex-wrap gap-3">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-light">
                        <i class="bi bi-arrow-left me-2"></i>Voltar
                    </a>
                    <a href="@Url.Action("ConsultarOrientacoes", "Orientacoes")" class="btn btn-outline-eco">
                        <i class="bi bi-lightbulb me-2"></i>Orientações e Dicas
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
