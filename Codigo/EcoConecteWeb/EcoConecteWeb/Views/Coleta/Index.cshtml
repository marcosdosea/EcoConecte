@model IEnumerable<EcoConecteWeb.Models.ColetaViewModel>

@{
    ViewData["Title"] = "EcoConecte - Coletas";

    // Garantir que o Model não seja nulo
    var coletas = Model ?? Enumerable.Empty<EcoConecteWeb.Models.ColetaViewModel>();
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="section-title">
                    <i class="bi bi-recycle me-2"></i>Coletas
                </h2>
                <a href="@Url.Action("Create")" class="btn btn-eco">
                    <i class="bi bi-plus-circle me-2"></i>Cadastrar nova coleta
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.Id)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.Cep)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.Logradouro)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.Numero)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.DiaColeta)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.HorarioInicio)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.HorarioTermino)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.IdCooperativa)</th>
                                    <th class="px-4">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in coletas) {
                                    <tr>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.Cep)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.Logradouro)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.Numero)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.DiaColeta)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.HorarioInicio)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.HorarioTermino)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.IdCooperativa)</td>
                                        <td class="px-4">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>