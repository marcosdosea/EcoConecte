@model IEnumerable<EcoConecteWeb.Models.ColetaViewModel>

@{
    ViewData["Title"] = "EcoConecte - Coletas";

    // Garantir que o Model não seja nulo
    var coletas = Model ?? Enumerable.Empty<EcoConecteWeb.Models.ColetaViewModel>();

    // Recuperando os filtros passados
    var cepFiltro = ViewData["CepFiltro"] as string ?? "";
    var logradouroFiltro = ViewData["LogradouroFiltro"] as string ?? "";
    var diaColetaFiltro = ViewData["DiaColetaFiltro"] as string ?? "";
    var idCooperativaFiltro = ViewData["IdCooperativaFiltro"] as string ?? "";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="section-title">
                    <i class="bi bi-recycle me-2"></i>Coletas
                </h2>
                <a href="@Url.Action("Create")" class="btn btn-eco">
                    <i class="bi bi-plus-circle me-2"></i>Cadastrar nova coleta
                </a>
            </div>

            <!-- Filtros -->
            <div class="mb-4">
                <form method="get" asp-action="Index">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="cepFiltro">CEP</label>
                            <input type="text" class="form-control form-control-sm" name="cepFiltro" value="@cepFiltro" />
                        </div>
                        <div class="col-md-3">
                            <label for="logradouroFiltro">Logradouro</label>
                            <input type="text" class="form-control form-control-sm" name="logradouroFiltro" value="@logradouroFiltro" />
                        </div>
                        <div class="col-md-3">
                            <label for="diaColetaFiltro">Dia da Coleta</label>
                            <input type="text" class="form-control form-control-sm" name="diaColetaFiltro" value="@diaColetaFiltro" />
                        </div>
                        <div class="col-md-3">
                            <label for="idCooperativaFiltro">ID Cooperativa</label>
                            <input type="text" class="form-control form-control-sm" name="idCooperativaFiltro" value="@idCooperativaFiltro" />
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button type="submit" class="icon-button">
                                <i class="bi bi-search"></i> Filtrar
                            </button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.Id)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.Cep)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.Logradouro)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.Numero)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.DiaColeta)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.HorarioInicio)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.HorarioTermino)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.IdCooperativa)</th>
                                    <th class="px-4">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in coletas)
                                {
                                    <tr>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.Cep)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.Logradouro)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.Numero)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.DiaColeta)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.HorarioInicio)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.HorarioTermino)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.IdCooperativa)</td>
                                        <td class="px-4">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
