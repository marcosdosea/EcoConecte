@model EcoConecteWeb.Models.NoticiaViewModel

@{
    ViewData["Title"] = "EcoConecte - Apagar Notícia";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-trash me-2"></i>Apagar Notícia
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning mb-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Atenção!</strong> Tem certeza de que deseja apagar esta notícia? Esta ação não pode ser desfeita.
                    </div>

                    <h5 class="section-title text-eco-dark mb-3">
                        <i class="bi bi-info-circle me-2"></i>Informações da Notícia
                    </h5>

                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Id)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Titulo)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Titulo)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IdCooperativa)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdCooperativa)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Data)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Data)</dd>
                    </dl>

                    <h5 class="section-title text-eco-dark mb-3 mt-4">
                        <i class="bi bi-text-paragraph me-2"></i>Conteúdo
                    </h5>
                    <div class="p-3 bg-light rounded">
                        @Html.DisplayFor(model => model.Conteudo)
                    </div>

                    <div class="card-footer form-actions p-4 d-flex justify-content-between align-items-center flex-wrap gap-3 mt-4">
                        <a href="@Url.Action("Index")" class="btn btn-light">
                            <i class="bi bi-arrow-left me-2"></i>Voltar
                        </a>
                        <form asp-action="Delete" method="post">
                            <button type="submit" class="btn btn-danger px-4 py-2">
                                <i class="bi bi-trash me-2"></i>Confirmar Exclusão
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
