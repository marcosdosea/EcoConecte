@model Core.Noticia

@{
    ViewData["Title"] = "Detalhes da Not√≠cia";
}

<div class="container py-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="mb-4">
                <a asp-action="Index" class="btn btn-outline-success mb-3">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
                
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h2 class="card-title mb-3">@Model.Titulo</h2>
                        <p class="text-muted mb-4">
                            <i class="bi bi-calendar me-2"></i> 
                            @Html.DisplayFor(model => model.Data)
                        </p>
                        
                        <div class="card-text news-content">
                            @Html.Raw(Model.Conteudo)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .news-content {
        line-height: 1.8;
        font-size: 1.1rem;
    }
</style> 