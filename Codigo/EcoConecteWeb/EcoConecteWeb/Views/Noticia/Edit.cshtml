@model EcoConecteWeb.Models.NoticiaViewModel

@{
    ViewData["Title"] = "EcoConecte - Editar Notícia";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-eco text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Editar Notícia
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <h5 class="section-title text-eco-dark mb-3">
                                    <i class="bi bi-info-circle me-2"></i>Informações da Notícia
                                </h5>

                                <div class="form-group mb-3">
                                    <label asp-for="Titulo" class="form-label">Título</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-type"></i></span>
                                        <input asp-for="Titulo" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="Titulo" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Conteudo" class="form-label">Conteúdo</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-text-paragraph"></i></span>
                                        <textarea asp-for="Conteudo" class="form-control" rows="5" required></textarea>
                                    </div>
                                    <span asp-validation-for="Conteudo" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="IdCooperativa" class="form-label">Cooperativa</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-building"></i></span>
                                        <input asp-for="IdCooperativa" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="IdCooperativa" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Data" class="form-label">Data</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                                        <input asp-for="Data" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="Data" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer form-actions p-4 d-flex justify-content-between align-items-center flex-wrap gap-3">
                            <a href="@Url.Action("Index", "Noticia")" class="btn btn-light">
                                <i class="bi bi-arrow-left me-2"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-eco px-4 py-2">
                                <i class="bi bi-check-circle me-2"></i>Salvar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
