@model EcoConecteWeb.Models.OrientacoesViewModel

@{
    ViewData["Title"] = "EcoConecte - Apagar Orientação";
}

<div class="container">
    <h1 class="title">
        <i class="fas fa-trash-alt"></i> Apagar Orientação
    </h1>

    <h3>Tem certeza?</h3>

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Titulo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Titulo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.IdCooperativa)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdCooperativa)
            </dd>
        </dl>
    </div>

    <div class="button-group" style="display: flex; justify-content: space-between;">
        <form asp-action="Delete" style="flex: 1; margin-right: 5px;">
            <input type="submit" value="Apagar" class="icon-button" style="width: 100%;" />
        </form>
        <a class="icon-button" asp-action="Index" style="flex: 1; margin-left: 5px; text-align: center;">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
    </div>
</div>
