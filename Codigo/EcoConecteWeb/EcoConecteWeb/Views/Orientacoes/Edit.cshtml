@model EcoConecteWeb.Models.OrientacoesViewModel

@{
    ViewData["Title"] = "EcoConecte - Editar Orientação";
}

<div class="container">
    <h1 class="title">
        <i class="fas fa-edit"></i> Editar Orientação
    </h1>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" class="form-container-expanded">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Titulo" class="control-label"></label>
                    <input asp-for="Titulo" class="form-control" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"></label>
                    <textarea asp-for="Descricao" class="form-control larger-textarea"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdCooperativa" class="control-label"></label>
                    <input asp-for="IdCooperativa" class="form-control" />
                    <span asp-validation-for="IdCooperativa" class="text-danger"></span>
                </div>

                <div class="form-group button-group">
                    <input type="submit" value="Salvar" class="icon-button" />
                    <a class="icon-button" asp-action="Index">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
