@model IEnumerable<EcoConecteWeb.Models.OrientacoesViewModel>

@{
    ViewData["Title"] = "EcoConnect - Orientações";
}

<h1>Orientações</h1>

<p>
    <a asp-action="Create">Cadastrar nova orientação</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdCooperativa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCooperativa)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "link-action" }) |
                @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "link-action" }) |
                @Html.ActionLink("Apagar", "Delete", new { id = item.Id }, new { @class = "link-action" })
            </td>
        </tr>
}
    </tbody>
</table>
