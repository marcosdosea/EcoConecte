@model IEnumerable<EcoConecteWeb.Models.OrientacoesViewModel>
@{
    ViewData["Title"] = "Orientações de Reciclagem";
    var orientacoes = Model ?? Enumerable.Empty<EcoConecteWeb.Models.OrientacoesViewModel>();
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="mb-4 text-center">
                <h1 class="display-5 fw-bold text-eco mb-2">Como separar seu lixo corretamente</h1>
                <p class="lead">Confira nossas orientações para reciclar de forma adequada e contribuir com o meio ambiente</p>
            </div>

            <div class="eco-tip-banner p-4 mb-5">
                <div class="row align-items-center">
                    <div class="col-md-8">
                        <h4 class="mb-3">Por que separar o lixo?</h4>
                        <p class="mb-0">A separação de resíduos é fundamental para o processo de reciclagem. Ao separar corretamente, você reduz a quantidade de lixo enviada para aterros sanitários e contribui para a preservação dos recursos naturais.</p>
                    </div>
                    <div class="col-md-4 text-center">
                        <img src="https://via.placeholder.com/150" alt="Reciclagem" class="img-fluid rounded-circle eco-icon">
                    </div>
                </div>
            </div>

            @if (!orientacoes.Any())
            {
                <div class="alert alert-info text-center p-4" role="alert">
                    <i class="bi bi-info-circle me-2 fs-4"></i>
                    <span>Ainda não existem orientações de coleta cadastradas.</span>
                </div>
            }
            else
            {
                <div class="row g-4">
                    @foreach (var item in orientacoes)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card shadow-sm h-100 border-0">
                                <div class="card-body p-4">
                                    <div class="d-flex align-items-center mb-3">
                                        <div class="orientation-icon me-3">
                                            <i class="bi bi-recycle text-eco"></i>
                                        </div>
                                        <h4 class="card-title mb-0">@item.Titulo</h4>
                                    </div>
                                    <p class="card-text">@item.Descricao</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            
            <div class="text-center mt-5">
                <a asp-controller="Home" asp-action="Index" class="btn icon-button">
                    <i class="bi bi-arrow-left"></i> Voltar para Home
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .text-eco {
        color: #38A169;
    }
    
    .eco-tip-banner {
        background-color: #E6FFFA;
        border-radius: 12px;
        border-left: 5px solid #38A169;
        box-shadow: 0 4px 12px rgba(56, 161, 105, 0.1);
    }
    
    .eco-icon {
        width: 120px;
        height: 120px;
        background-color: rgba(56, 161, 105, 0.1);
        padding: 15px;
    }
    
    .orientation-icon {
        width: 48px;
        height: 48px;
        background-color: rgba(56, 161, 105, 0.1);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .orientation-icon i {
        font-size: 24px;
    }
    
    .card {
        transition: transform 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
    
    @@media (max-width: 768px) {
        .eco-icon {
            width: 80px;
            height: 80px;
            margin-top: 20px;
        }
    }
</style>