@model EcoConecteWeb.Models.AgendamentoViewModel

@{
    ViewData["Title"] = "Agendar Coleta";
    var pessoaId = ViewData["PessoaId"];
}

<div class="schedule-form-container py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card schedule-form-card">
                    <div class="card-header form-header">
                        <h1 class="form-title">
                            <i class="bi bi-calendar-plus me-2"></i>Agendar Coleta
                        </h1>
                        <p class="text-muted mb-0">Preencha os dados para solicitar uma coleta de materiais recicláveis</p>
                    </div>
                    
                    <div class="card-body p-4">
                        <form asp-action="Create" class="needs-validation" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                            
                            <input asp-for="IdPessoa" class="form-control" value="@pessoaId" readonly type="hidden" />
                            <input asp-for="Status" class="form-control" value="A" readonly type="hidden" />
                            
                            <div class="row">
                                <div class="col-md-12 mb-4">
                                    <h5 class="form-section-title text-eco-dark mb-3">
                                        <i class="bi bi-calendar-date me-2"></i>Data e Hora
                                    </h5>
                                    
                                    <div class="form-group mb-3">
                                        <label asp-for="Data" class="form-label">Data de Coleta</label>
                                        <div class="input-group">
                                            <span class="input-group-text"><i class="bi bi-calendar-event"></i></span>
                                            <input asp-for="Data" class="form-control" placeholder="Selecione a data e hora para coleta" required />
                                        </div>
                                        <span asp-validation-for="Data" class="text-danger"></span>
                                        <div class="form-text">Escolha uma data e horário para a coleta dos materiais</div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-12 mb-4">
                                    <h5 class="form-section-title text-eco-dark mb-3">
                                        <i class="bi bi-geo-alt me-2"></i>Endereço para Coleta
                                    </h5>
                                    
                                    <div class="row g-3">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="Cep" class="form-label">CEP</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-mailbox"></i></span>
                                                    <input asp-for="Cep" class="form-control" placeholder="00000-000" required />
                                                </div>
                                                <span asp-validation-for="Cep" class="text-danger"></span>
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label asp-for="Logradouro" class="form-label">Logradouro</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-signpost"></i></span>
                                                    <input asp-for="Logradouro" class="form-control" placeholder="Rua, Avenida, etc" required />
                                                </div>
                                                <span asp-validation-for="Logradouro" class="text-danger"></span>
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="Numero" class="form-label">Número</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-house-door"></i></span>
                                                    <input asp-for="Numero" class="form-control" placeholder="123" required />
                                                </div>
                                                <span asp-validation-for="Numero" class="text-danger"></span>
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label asp-for="Bairro" class="form-label">Bairro</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-map"></i></span>
                                                    <input asp-for="Bairro" class="form-control" placeholder="Seu bairro" required />
                                                </div>
                                                <span asp-validation-for="Bairro" class="text-danger"></span>
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-8">
                                            <div class="form-group">
                                                <label asp-for="Cidade" class="form-label">Cidade</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-building"></i></span>
                                                    <input asp-for="Cidade" class="form-control" placeholder="Sua cidade" required />
                                                </div>
                                                <span asp-validation-for="Cidade" class="text-danger"></span>
                                            </div>
                                        </div>
                                        
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <label asp-for="Estado" class="form-label">Estado</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="bi bi-geo"></i></span>
                                                    <input asp-for="Estado" class="form-control" placeholder="UF" required />
                                                </div>
                                                <span asp-validation-for="Estado" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="card-footer form-actions p-4 d-flex justify-content-between align-items-center flex-wrap gap-3">
                                <div>
                                    <a href="@Url.Action("Index", "Home")" class="btn btn-light">
                                        <i class="bi bi-arrow-left me-2"></i>Voltar
                                    </a>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-eco px-4 py-2">
                                        <i class="bi bi-check-circle me-2"></i>Agendar Coleta
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
