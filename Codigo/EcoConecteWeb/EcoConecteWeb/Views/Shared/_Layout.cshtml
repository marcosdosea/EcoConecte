<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcoConecteWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcoConecteWeb.styles.css" asp-append-version="true" />
    <link href=~/favicon.ico rel="icon" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha384-8XgHp9T5c7C8mrKbeJgYHtgjj9n8vQ4g5k3hD4hlI4u1cwtos2yT8toqljz4t5" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Header Atualizado -->
    <header class="eco-header shadow-sm">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a href="/Home" class="navbar-brand d-flex align-items-center">
                    <img src="/img/logo_cooperativa.webp" alt="EcoConecte" class="logo-img me-2">
                    <span class="brand-text">EcoConecte</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Sobre">
                                <i class="bi bi-info-circle"></i> Sobre
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Noticia" asp-action="ListaPublica">
                                <i class="bi bi-newspaper"></i> Notícias
                            </a>
                        </li>
                    </ul>
                    <div class="ms-auto">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container main-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer Atualizado -->
    <footer class="eco-footer">
        <div class="container py-4">
            <div class="row g-4">
                <div class="col-md-4">
                    <h5 class="mb-3 footer-heading">EcoConecte</h5>
                    <p class="text-muted mb-3">Conectando pessoas e cooperativas de reciclagem para um mundo mais sustentável.</p>
                    <div class="d-flex">
                        <a href="#" class="social-link" aria-label="Facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="social-link" aria-label="Instagram">
                            <i class="bi bi-instagram"></i>
                        </a>
                        <a href="#" class="social-link" aria-label="Twitter">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="#" class="social-link" aria-label="LinkedIn">
                            <i class="bi bi-linkedin"></i>
                        </a>
                    </div>
                </div>
                <div class="col-md-4">
                    <h5 class="mb-3 footer-heading">Links Úteis</h5>
                    <ul class="footer-links">
                        <li><a href="#"><i class="bi bi-arrow-right-short"></i> Política de Privacidade</a></li>
                        <li><a href="#"><i class="bi bi-arrow-right-short"></i> Termos de Uso</a></li>
                        <li><a href="#"><i class="bi bi-arrow-right-short"></i> Perguntas Frequentes</a></li>
                        <li><a href="#"><i class="bi bi-arrow-right-short"></i> Contato</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5 class="mb-3 footer-heading">Contato</h5>
                    <ul class="footer-contact">
                        <li><i class="bi bi-geo-alt-fill"></i> Av. Ver. Olímpio Grande, s/n - Porto, Itabaiana - SE, 49500-000</li>
                        <li><i class="bi bi-telephone-fill"></i> (79) 3432-8200</li>
                        <li><i class="bi bi-envelope-fill"></i> contato@ecoconecte.com.br</li>
                    </ul>
                </div>
            </div>
            <hr class="mt-4 mb-3">
            <div class="text-center">
                <p class="mb-0">© 2024 EcoConecte. Todos os direitos reservados.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
