<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EcoConecteWeb</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EcoConecteWeb.styles.css" asp-append-version="true" />
    <link href=~/favicon.ico rel=“icon” type=“image/x-icon” />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha384-8XgHp9T5c7C8mrKbeJgYHtgjj9n8vQ4g5k3hD4hlI4u1cwtos2yT8toqljz4t5" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3 ">
            <div class="container-fluid d-flex align-items-center justify-content-between">
                <a href="/Home" class="d-inline-block">
                    <img src="/img/logo_cooperativa.webp" alt="logo_cooperativa" class="logo-img">
                </a>
                <button class="navbar-toggler me-3" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-grow-1 justify-content-end">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted position-relative bottom-0 w-100">
        <div class="container py-3">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                <p class="mb-0">© 2024 EcoConecte, Todos os direitos reservados</p>
                <ul class="list-unstyled d-flex mb-0">
                    <li class="me-3 me-md-4">
                        <a class="link-body-emphasis" href="#" aria-label="Twitter">
                            <i class="bi bi-twitter"></i>
                        </a>
                    </li>
                    <li class="me-3 me-md-4">
                        <a class="link-body-emphasis" href="#" aria-label="Instagram">
                            <i class="bi bi-instagram"></i>
                        </a>
                    </li>
                    <li class="me-3 me-md-4">
                        <a class="link-body-emphasis" href="#" aria-label="Facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
