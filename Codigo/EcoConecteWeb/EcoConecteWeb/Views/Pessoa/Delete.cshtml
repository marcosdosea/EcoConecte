@model EcoConecteWeb.Models.PessoaViewModel

@{
    ViewData["Title"] = "EcoConecte - Apagar Pessoa";
}

<h1 class="title">
    <i class="fas fa-trash-alt"></i> Apagar Pessoa
</h1>

@if (Model != null)
{
    <h3>Tem certeza de que deseja apagar este cadastro?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">CPF</dt>
            <dd class="col-sm-10">@Model.Cpf</dd>

            <dt class="col-sm-2">Nome</dt>
            <dd class="col-sm-10">@Model.Nome</dd>

            <dt class="col-sm-2">Telefone</dt>
            <dd class="col-sm-10">@Model.Telefone</dd>

            <dt class="col-sm-2">Endereço</dt>
            <dd class="col-sm-10">@Model.Logradouro, @Model.Numero</dd>

            <dt class="col-sm-2">Bairro</dt>
            <dd class="col-sm-10">@Model.Bairro</dd>

            <dt class="col-sm-2">Cidade</dt>
            <dd class="col-sm-10">@Model.Cidade - @Model.Estado</dd>

            <dt class="col-sm-2">Cooperativa</dt>
            <dd class="col-sm-10">@Model.IdCooperativa</dd>

            <dt class="col-sm-2">Status</dt>
            <dd class="col-sm-10">@Model.Status</dd>
        </dl>

        <form asp-action="DeleteConfirmed" method="post" class="button-group">
            <input type="hidden" asp-for="Id" /> <!-- Garante que o ID é enviado -->
            <input type="submit" value="Apagar" class="icon-button danger-button" />
            <a href="@Url.Action("Index")" class="icon-button">
                <i class="fa fa-arrow-left"></i> Voltar
            </a>
        </form>
    </div>
}
else
{
    <p class="text-danger">Erro: Não foi possível carregar os dados da pessoa.</p>
}
