@model EcoConecteWeb.Models.CooperativaViewModel

@{
    ViewData["Title"] = "EcoConecte - Apagar Cooperativa";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-trash me-2"></i>Apagar Cooperativa
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning mb-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong>Atenção!</strong> Tem certeza de que deseja apagar esta cooperativa? Esta ação não pode ser desfeita.
                    </div>

                    <h5 class="section-title text-eco-dark mb-3">
                        <i class="bi bi-info-circle me-2"></i>Informações da Cooperativa
                    </h5>

                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Id)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Nome)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Nome)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.InscricaoEstadual)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.InscricaoEstadual)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.InscricaoMunicipal)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.InscricaoMunicipal)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Cnpj)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Cnpj)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Cep)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Cep)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Logradouro)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Logradouro)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Bairro)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Bairro)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Numero)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Numero)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Telefone)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Telefone)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.IdPessoaRepresentate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.IdPessoaRepresentate)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>
                    </dl>

                    <div class="card-footer form-actions p-4 d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <a href="@Url.Action("Index")" class="btn btn-light">
                            <i class="bi bi-arrow-left me-2"></i>Voltar
                        </a>
                        <form asp-action="Delete" method="post">
                            <button type="submit" class="btn btn-danger px-4 py-2">
                                <i class="bi bi-trash me-2"></i>Confirmar Exclusão
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
