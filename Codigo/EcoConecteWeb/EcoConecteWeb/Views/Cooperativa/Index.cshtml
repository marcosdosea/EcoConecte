@model IEnumerable<EcoConecteWeb.Models.CooperativaViewModel>

@{
    ViewData["Title"] = "EcoConecte - Cooperativas";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="section-title">
                    <i class="bi bi-building me-2"></i>Cooperativas
                </h2>
                <a href="@Url.Action("Create")" class="btn btn-eco">
                    <i class="bi bi-plus-circle me-2"></i>Cadastrar nova cooperativa
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.Id)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.Nome)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.Cnpj)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.Cep)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.Telefone)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.IdPessoaRepresentate)</th>
                                    <th class="px-4">@Html.DisplayNameFor(model => model.Status)</th>
                                    <th class="px-4">Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.Nome)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.Cnpj)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.Cep)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.Telefone)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.IdPessoaRepresentate)</td>
                                        <td class="px-4">@Html.DisplayFor(modelItem => item.Status)</td>
                                        <td class="px-4">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
