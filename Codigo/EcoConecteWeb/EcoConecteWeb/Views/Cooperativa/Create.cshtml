@model EcoConecteWeb.Models.CooperativaViewModel

@{
    ViewData["Title"] = "EcoConecte - Cadastrar Cooperativa";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-eco text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-building-add me-2"></i>Cadastrar Cooperativa
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <h5 class="section-title text-eco-dark mb-3">
                                    <i class="bi bi-card-text me-2"></i>Informações da Cooperativa
                                </h5>

                                <div class="form-group mb-3">
                                    <label asp-for="Nome" class="form-label">Nome</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-person-badge"></i></span>
                                        <input asp-for="Nome" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="InscricaoEstadual" class="form-label">Inscrição Estadual</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-journal-text"></i></span>
                                        <input asp-for="InscricaoEstadual" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="InscricaoEstadual" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="InscricaoMunicipal" class="form-label">Inscrição Municipal</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-journal-check"></i></span>
                                        <input asp-for="InscricaoMunicipal" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="InscricaoMunicipal" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Cnpj" class="form-label">CNPJ</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-upc-scan"></i></span>
                                        <input asp-for="Cnpj" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="Cnpj" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <h5 class="section-title text-eco-dark mb-3">
                                    <i class="bi bi-geo-alt me-2"></i>Endereço da Cooperativa
                                </h5>

                                <div class="form-group col-md-4">
                                    <label asp-for="Cep" class="form-label">CEP</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-mailbox"></i></span>
                                        <input asp-for="Cep" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="Cep" class="text-danger"></span>
                                </div>

                                <div class="form-group col-md-8">
                                    <label asp-for="Logradouro" class="form-label">Logradouro</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-signpost"></i></span>
                                        <input asp-for="Logradouro" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="Logradouro" class="text-danger"></span>
                                </div>

                                <div class="form-group col-md-6">
                                    <label asp-for="Bairro" class="form-label">Bairro</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-building"></i></span>
                                        <input asp-for="Bairro" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="Bairro" class="text-danger"></span>
                                </div>

                                <div class="form-group col-md-6">
                                    <label asp-for="Numero" class="form-label">Número</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-house-door"></i></span>
                                        <input asp-for="Numero" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="Numero" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row g-3 mb-4">
                            <div class="col-12">
                                <h5 class="section-title text-eco-dark mb-3">
                                    <i class="bi bi-telephone me-2"></i>Contato
                                </h5>

                                <div class="form-group col-md-6">
                                    <label asp-for="Telefone" class="form-label">Telefone</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-telephone-fill"></i></span>
                                        <input asp-for="Telefone" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="Telefone" class="text-danger"></span>
                                </div>

                                <div class="form-group col-md-6">
                                    <label asp-for="Email" class="form-label">Email</label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
                                        <input asp-for="Email" class="form-control" required />
                                    </div>
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="card-footer form-actions p-4 d-flex justify-content-between align-items-center flex-wrap gap-3">
                            <a class="btn btn-light" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-arrow-left me-2"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-eco px-4 py-2">
                                <i class="bi bi-check-circle me-2"></i>Cadastrar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
