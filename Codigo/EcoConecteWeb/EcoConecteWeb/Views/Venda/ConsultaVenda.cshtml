@model IEnumerable<EcoConecteWeb.Models.VendaViewModel>

@{
    ViewData["Title"] = "Consultar Vendas";
    var pessoaId = ViewData["PessoaId"];  // Pega o ID da pessoa logada
    var vendas = Model ?? Enumerable.Empty<EcoConecteWeb.Models.VendaViewModel>();  // Caso o Model seja nulo, evita erro
}

<div class="container mt-4">
    <h1 class="title text-center mb-4">Minhas Vendas</h1>

    @if (!vendas.Any())
    {
        <div class="alert alert-danger text-center" role="alert">
            Nenhuma venda encontrada para sua conta.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in vendas)
            {
                <div class="col-md-6 mb-3">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@item.Tipo</h5>
                            <p class="card-text">Quantidade: @item.Quantidade</p>
                            <p class="card-text">Valor: R$ @item.Valor.ToString("F2")</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="text-center mt-4">
        <a class="btn btn-secondary" href="@Url.Action("Index", "Home")"><i class="fas fa-arrow-left"></i> Voltar</a>
    </div>
</div>
