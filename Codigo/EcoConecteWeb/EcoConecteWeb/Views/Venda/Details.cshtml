@model EcoConecteWeb.Models.VendaViewModel

@{
    ViewData["Title"] = "EcoConecte - Venda Detalhes";
}

<h1 class="title">
    <i class="fas fa-info-circle"></i> Detalhes da Venda
</h1>

<div class="form-container">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantidade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantidade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdCooperativa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdCooperativa)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdPessoa)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdPessoa)
        </dd>
    </dl>
</div>

<div class="button-group">
    <a href="@Url.Action("Edit", new { id = Model.Id })" class="icon-button">
        <i class="fas fa-edit"></i> Editar
    </a>
    <a class="icon-button" asp-action="Index">
        <i class="fa fa-arrow-left"></i> Voltar
    </a>
</div>