@page
@model LoginModel
@{
    ViewData["Title"] = "Entrar no Sistema";
}

<div class="auth-container py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="auth-card">
                    <div class="auth-header text-center mb-4">
                        <div class="mb-3">
                            <i class="bi bi-person-circle auth-icon"></i>
                        </div>
                        <h1 class="auth-title">Bem-vindo de volta!</h1>
                        <p class="text-muted">Entre com suas credenciais para acessar o sistema</p>
                    </div>
                    
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        
                        <div class="form-group mb-4">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nome@exemplo.com" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-4">
                            <label asp-for="Input.Password" class="form-label">Senha</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-key"></i></span>
                                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Sua senha" />
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                <label class="form-check-label" asp-for="Input.RememberMe">
                                    Lembrar-me
                                </label>
                            </div>
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-eco fw-semibold">Esqueceu sua senha?</a>
                        </div>
                        
                        <div class="mb-4">
                            <button id="login-submit" type="submit" class="btn btn-eco w-100 py-2">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Entrar
                            </button>
                        </div>
                        
                        <div class="text-center">
                            <p class="mb-3">
                                Não tem uma conta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-eco fw-semibold">Registre-se</a>
                            </p>
                            <p class="small text-muted">
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar email de confirmação</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-container {
        min-height: calc(100vh - 300px);
        display: flex;
        align-items: center;
    }
    
    .auth-card {
        background-color: white;
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
        padding: 2.5rem;
    }
    
    .auth-icon {
        font-size: 3.5rem;
        color: #38A169;
    }
    
    .auth-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #2D3748;
    }
    
    .text-eco {
        color: #38A169;
    }
    
    .btn-eco {
        background-color: #38A169;
        color: white;
        border: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn-eco:hover {
        background-color: #2F855A;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(56, 161, 105, 0.15);
    }
    
    .input-group-text {
        background-color: #F9FAFB;
        border-right: none;
    }
    
    .input-group .form-control {
        border-left: none;
    }
    
    @@media (max-width: 768px) {
        .auth-card {
            padding: 1.5rem;
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
