@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu sua senha?";
}

<div class="auth-container py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="auth-card">
                    <div class="auth-header text-center mb-4">
                        <div class="mb-3">
                            <i class="bi bi-question-circle auth-icon"></i>
                        </div>
                        <h1 class="auth-title">Recuperar Senha</h1>
                        <p class="text-muted">Informe seu email para receber um link de recuperação</p>
                    </div>
                    
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        
                        <div class="alert alert-info mb-4">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-info-circle-fill me-3 fs-4"></i>
                                <div>
                                    <strong>Instruções:</strong> Enviaremos um link para redefinir sua senha para o email informado.
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group mb-4">
                            <label asp-for="Input.Email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="seu@email.com" />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-4">
                            <button type="submit" class="btn btn-eco w-100 py-2">
                                <i class="bi bi-send me-2"></i>Enviar Link de Recuperação
                            </button>
                        </div>
                        
                        <div class="text-center">
                            <p class="mb-0">
                                <a asp-page="./Login" class="text-eco fw-semibold">
                                    <i class="bi bi-arrow-left me-1"></i>Voltar para o login
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-container {
        min-height: calc(100vh - 300px);
        display: flex;
        align-items: center;
    }
    
    .auth-card {
        background-color: white;
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
        padding: 2.5rem;
    }
    
    .auth-icon {
        font-size: 3.5rem;
        color: #3182CE;
    }
    
    .auth-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #2D3748;
    }
    
    .text-eco {
        color: #38A169;
    }
    
    .btn-eco {
        background-color: #38A169;
        color: white;
        border: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn-eco:hover {
        background-color: #2F855A;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(56, 161, 105, 0.15);
    }
    
    .input-group-text {
        background-color: #F9FAFB;
        border-right: none;
    }
    
    .input-group .form-control {
        border-left: none;
    }
    
    @@media (max-width: 768px) {
        .auth-card {
            padding: 1.5rem;
        }
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
