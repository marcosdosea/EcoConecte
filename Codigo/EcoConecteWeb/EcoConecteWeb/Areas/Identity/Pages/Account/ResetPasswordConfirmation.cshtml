@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Confirmação de redefinição de senha";
}

<div class="auth-container py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="auth-card text-center">
                    <div class="auth-header mb-4">
                        <div class="mb-3">
                            <i class="bi bi-check-circle-fill auth-icon-success"></i>
                        </div>
                        <h1 class="auth-title">Senha redefinida com sucesso!</h1>
                        <p class="text-muted mt-3">
                            Sua senha foi redefinida com sucesso. Agora você pode acessar sua conta com a nova senha.
                        </p>
                    </div>
                    
                    <div class="mt-4">
                        <a asp-page="./Login" class="btn btn-eco w-75 py-2">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Ir para o login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .auth-container {
        min-height: calc(100vh - 300px);
        display: flex;
        align-items: center;
    }
    
    .auth-card {
        background-color: white;
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
        padding: 2.5rem;
    }
    
    .auth-icon-success {
        font-size: 4rem;
        color: #38A169;
    }
    
    .auth-title {
        font-size: 1.75rem;
        font-weight: 700;
        color: #2D3748;
    }
    
    .btn-eco {
        background-color: #38A169;
        color: white;
        border: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }
    
    .btn-eco:hover {
        background-color: #2F855A;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(56, 161, 105, 0.15);
    }
    
    @@media (max-width: 768px) {
        .auth-card {
            padding: 1.5rem;
        }
    }
</style>
